<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.enviromentapp.UI.ListFragment"
        android:label="Activities"
        tools:layout="@layout/fragment_list">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.enviromentapp.UI.AddFragment"
        android:label="Add Activity"
        tools:layout="@layout/fragment_add">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.enviromentapp.UI.EditFragment"
        android:label="Edit Activity"
        tools:layout="@layout/fragment_edit" >
        <action
            android:id="@+id/action_editFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>